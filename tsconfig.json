{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",
    "lib": ["dom", "dom.iterable", "es6"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "~/src/*": ["src/*"],
      "main/*": ["main/*"],
      "build/*": ["build/*"],
      "public/*": ["public/*"]
    }
  },
  "include": [
    "src/**/*",
    "main/**/*",
    "build/**/*"
  ],
  "exclude": ["node_modules"]
}
